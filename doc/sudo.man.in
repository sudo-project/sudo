[\fB\-p\fR\ \fIprompt\fR]
[\fB\-r\fR\ \fIrole\fR]
[\fB\-t\fR\ \fItype\fR]
[\fB\-u\fR\ \fIuser\ name\fR\ |\ \fI#uid\fR]
